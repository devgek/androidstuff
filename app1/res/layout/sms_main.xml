<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse:" />

    <EditText
        android:id="@+id/etSmsAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10" >

        <requestFocus />
    </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/butSmsSendIntent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Senden per Intent" />

    <Button
        android:id="@+id/butSmsSendProg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Senden per Systemprogramm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Nachricht:" />
	
	    <EditText
	        android:id="@+id/etSmsMessage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:ems="10" >
	    </EditText>

    </LinearLayout>
    <Button
        android:id="@+id/butSmsSendSelf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Senden an mich" />
    
</LinearLayout>
