<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="40dp"
    	android:orientation="horizontal" >
        <EditText
            android:minWidth="150dip"
            android:id="@+id/editDbDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

	    <Button
	        android:id="@+id/buttonDivision"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Abteilung" />
	</LinearLayout>
	
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Vorname" />
	
	        <EditText
	            android:minWidth="150dip"
	            android:id="@+id/editDbFirst"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nachname" />
	
	        <EditText
	            android:minWidth="150dip"
	            android:id="@+id/editDbLast"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Gehalt" />
	
	        <EditText
	            android:minWidth="150dip"
	            android:id="@+id/editDbSalary"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >
	    <Button
	        android:id="@+id/buttonDbSave"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:text="Speichern" />
	    <Button
	        android:id="@+id/buttonDbShow"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:text="Mitarbeiter aus Abteilung"  />
	    	</LinearLayout>
</LinearLayout>
